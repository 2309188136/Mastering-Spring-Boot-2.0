package com.dineshonjava.notificationservice.listener;

import org.springframework.cloud.stream.annotation.StreamListener;
import org.springframework.messaging.handler.annotation.Payload;
import org.springframework.stereotype.Component;

import com.dineshonjava.eventdrivenservice.model.Greetings;
import com.dineshonjava.eventdrivenservice.stream.GreetingsStreams;
import com.dineshonjava.notificationservice.stream.NotificationStreams;

import lombok.extern.slf4j.Slf4j;


@Component
public class NotificationListener {
	@StreamListener(NotificationStreams.INPUT)
	public void handleGreetings(@Payload Notification greetings) {
		System.out.println("Received greetings: {} "+greetings);
	}
}
