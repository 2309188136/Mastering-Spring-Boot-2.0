package com.dineshonjava.customerservice.service;

import java.util.List;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestParam;

import com.dineshonjava.customerservice.domain.Account;

/**
 * @author Dinesh.Rajput
 *
 */
@FeignClient("account-service")
public interface AccountService {
	
	@PostMapping(value = "/account/customer")
	List<Account> findAccountsByCutomer (@RequestParam("customer") Integer customer);
}
