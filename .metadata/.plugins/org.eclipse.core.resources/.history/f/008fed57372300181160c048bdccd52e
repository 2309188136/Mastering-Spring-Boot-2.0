package com.dineshonjava.accountservice.repository;

import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.CrudRepository;

import com.dineshonjava.accountservice.domain.Account;

/**
 * @author Dinesh.Rajput
 *
 */
public interface AccountRepository extends CrudRepository<Account, Long>{
	
	List<Account> findAccountByCustomer_id(Integer customer_id);
	
	@Query("FROM Account where id=?1")
	Account readRecord(Long id);
}
